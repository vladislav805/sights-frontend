{
    "compilerOptions": {
        "jsx": "react",
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "esnext",
        "sourceMap": true,
        "lib": ["dom", "es2015.core", "es6"],
        "noImplicitReturns": false,
        "noImplicitAny": true,
        "strictFunctionTypes": false
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules/*",
        "src/tests/*",
        "*.scss"
    ]
}
