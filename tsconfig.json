{
    "compilerOptions": {
        "jsx": "preserve",
        "module": "esnext",
        "moduleResolution": "node",
        "target": "esnext",
        "sourceMap": true,
        "lib": ["dom", "es2015.core", "es6"],
        "noImplicitReturns": false,
        "noImplicitAny": true,
        "strictFunctionTypes": false,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules/*",
        "src/tests/*"
    ]
}
